#include<stdio.h>
int main()
{
    int n,r,sum=0,temp;
    printf("Enter the number:");
    scanf("%d",&n);
    temp=n;
    while(n>0)
    {
        r=n%10;
        sum=(sum*10)+r;
        n=n/10;
    }
    if (temp==sum){
        printf("It is palindrome");
    }
    else{
        printf("It is not a palindrome");
    }
    return 0;
}


output
Enter the number:121
It is palindrome
